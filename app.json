{
  "id": "com.swttt.blowfish",
  "name": {
    "en": "Blowfish"
  },
  "tags": {
    "en": ["battery capability check"]
  },
  "description": {
    "en": "An app to check for batter levels and certain capabilities.",
    "nl": "Een app om het batterij niveau te controleren en andere capabilities."
  },
  "category": "tools",
  "images": {
    "large": "./assets/images/large.png",
    "small": "./assets/images/small.png"
  },
  "version": "0.0.2",
  "compatibility": "1.x",
  "author": {
    "name": "Bas Jansen",
    "email": "b@sjansen.email"
  },
  "contributors": {
    "developers": [{
      "name": "Inversion NL",
      "email": "inversion-nl@gmail.com"
    }]
  },
  "flow": {
    "triggers": [{
        "id": "update_check",
        "title": {
          "en": "Last update check"
        },
        "tokens": [{
          "name": "name",
          "type": "string",
          "title": {
            "en": "Name",
            "nl": "Naam"
          },
          "example": "Motion sensor"
        }],
        "args": [{
            "name": "capability",
            "type": "text",
            "placeholder": "Capability"
          },
          {
            "name": "per",
            "type": "number",
            "placeholder": "Max. minutes since update"
          }
        ]
      },
      {
        "id": "battery_check",
        "title": {
          "en": "If battery drops below"
        },
        "tokens": [{
            "name": "name",
            "type": "string",
            "title": {
              "en": "Name",
              "nl": "Naam"
            },
            "example": "Motion sensor"
          },
          {
            "name": "batterylvl",
            "type": "number",
            "title": {
              "en": "Battery level",
              "nl": "Batterij niveau"
            },
            "example": "22"
          }
        ],
        "args": [{
          "name": "lvl",
          "type": "number",
          "placeholder": "Battery percentage"
        }]
      }
    ],
    "conditions": [{
        "id": "checkZone",
        "title": {
          "en": "Lights are !{{on|off}} in",
          "nl": "Lampen zijn !{{aan|uit}} in"
        },
        "args": [{
          "name": "check",
          "type": "autocomplete",
          "placeholder": {
            "en": "Choose a zone",
            "nl": "Kies een zone"
          }
        }]
      },
      {
        "id": "checkBattery",
        "title": {
          "en": "Any battery level is !{{less|more}} then",
          "nl": "Een batterij !{{minder|meer}} is dan"
        },
        "args": [{
          "name": "batterycheck",
          "type": "number",
          "placeholder": {
            "en": "Percentage",
            "nl": "Percentage"
          }
        }]
      }
    ]
  }
}
